{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",

				"${file}",

				"${fileDirname}/Nnetwork.c",
				"${fileDirname}/Perceptron.c",
				"${fileDirname}/DataStructures/Layer.c",
				"${fileDirname}/Functions/activationFunctions.c"
				
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}